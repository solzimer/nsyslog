{
	"config" : {
		"datadir" : "/tmp/nsyslog1",
		"wmdir" : "/tmp/wms1",
		"input" : {"maxPending" : 1000},
		"buffer" : {"maxPending": 1000},
		"processor" : {"maxPending": 1000},
		"transporter" : {"maxPending": 1000}
	},

	"inputs" : {
		"w_1" : {
			"type" : "windows",
			"config" : {
				"readmode" : "offset",
				"offset" : "start",
				"channel" : "Security",
				"batchsize" : 5000,
				"format" : "xml"
			}
		},
		"w_2" : {
			"type" : "windows",
			"config" : {
				"readmode" : "offset",
				"offset" : "start",
				"channel" : "Application",
				"batchsize" : 5000,
				"format" : "xml"
			}
		},
		"w_3" : {
			"type" : "windows",
			"config" : {
				"readmode" : "offset",
				"offset" : "start",
				"channel" : "System",
				"batchsize" : 5000,
				"format" : "xml"
			}
		}
	},

	"transporters" : {
		"console" : {
			"type" : "console",
			"config" : {
				"format" : "${originalMessage}",
				"json" : {
					"format" : true,
					"spaces" : 2
				}
			}
		},
		"null" : {
			"type" : "null"
		}
	},

	"flows" : [
		{"from":"${type}=='windows'", "fork":false, "transporters":["null"]}
	]
}
